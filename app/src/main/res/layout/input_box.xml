<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" />

    <RelativeLayout
        android:id="@+id/rl_comment_area"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_content_filter"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/ll_function_area"
            android:background="@drawable/edit_shape"
            android:hint="说点什么吧..."
            android:imeOptions="actionDone"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_function_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--<ImageView
                android:id="@+id/img_like2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_like"/>-->
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_share" />
            <ImageView
                android:id="@+id/img_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_star" />

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_like" />

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_download" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>